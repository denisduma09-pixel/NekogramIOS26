<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 🌟 KOTUKTOPERGRAM RUSSIAN GLOW -->

    <!-- ❤️🤍💙 КРАСНО-СИНЕ-БЕЛАЯ ПАЛИТРА -->
    <color name="rus_red_bright">#D52B1E</color>           <!-- Яркий красный -->
    <color name="rus_red_deep">#CC0000</color>             <!-- Глубокий красный -->
    <color name="rus_blue_bright">#0039A6</color>          <!-- Яркий синий -->
    <color name="rus_blue_deep">#00247D</color>            <!-- Глубокий синий -->
    <color name="rus_white">#FFFFFF</color>                <!-- Белый -->
    <color name="rus_silver">#F0F0F0</color>              <!-- Серебряный -->

    <!-- 🌌 ФОНЫ -->
    <color name="bg_rus_night">#0A0A1A</color>             <!-- Русская ночь -->
    <color name="bg_rus_dusk">#1A1A2A</color>              <!-- Сумерки -->
    <color name="bg_rus_sky">#2A2A3A</color>               <!-- Небо -->

    <!-- ✨ DYNAMIC ISLAND -->
    <color name="dynamic_island_bg">#CC1A1A2A</color>
    <color name="dynamic_island_glow">#66D52B1E</color>    <!-- Красное свечение -->
    <color name="dynamic_island_pulse">#330039A6</color>   <!-- Синяя пульсация -->

    <!-- 🎨 ОСНОВНЫЕ ЦВЕТА -->
    <color name="theme_primary">@color/rus_red_bright</color>
    <color name="theme_accent">@color/rus_blue_bright</color>
    <color name="theme_background">@color/bg_rus_night</color>
    <color name="theme_surface">@color/bg_rus_dusk</color>

    <!-- 💬 ПУЗЫРИ СООБЩЕНИЙ -->
    <color name="bubble_out_start">@color/rus_red_bright</color>
    <color name="bubble_out_end">@color/rus_red_deep</color>
    <color name="bubble_in_start">@color/rus_blue_bright</color>
    <color name="bubble_in_end">@color/rus_blue_deep</color>

    <!-- 📝 ТЕКСТ -->
    <color name="text_primary">@color/rus_white</color>
    <color name="text_secondary">@color/rus_silver</color>
</resources>
